
  <view>
    
    <view class="banner-search-container">
        <view class="banner-container">
            <swiper style="height:{{($bannersearch$devicewidth/375)*165}}px;width:100%;" indicator-dots="true" autoplay="true">
                <block wx:for="{{$bannersearch$bannerlist}}" wx:for-index="$bannersearch$index" wx:for-item="$bannersearch$item" wx:key="$bannersearch$index">
                    <swiper-item>
                        <view bindtap="$bannersearch$jumpto" data-wpyjumpto-a="{{$bannersearch$item.link}}">
                            <image src="{{$bannersearch$item.src==''?'./../../images/icons/banner_default.jpg':$bannersearch$item.src}}" mode="aspectFill" style="height:{{($bannersearch$devicewidth/375)*165}}px;width:{{$bannersearch$devicewidth}}px"/>
                        </view>
                    </swiper-item>
                </block>
            </swiper>
        </view>
        <view class="search-read-only">
            <navigator class="inner-container" url="/pages/search/search">
                <icon class="search-img" type="search" color="#fff" size="14"/>
                <text class="hint-text">请输入关键词，如职位名/公司名等</text>
            </navigator>
        </view>
    </view>

    <block wx:for="{{corplist}}" wx:for-index="index" wx:for-item="item" wx:key="index">
      
  <view class="corp-container" bindtap="$corplist$goCorpView" data-com-index="{{index}}" data-wpygocorpview-a="{{item.id}}">
    <image src="{{item.mlogo}}" mode="aspectFit"/>
    <view class="corp-intro">
        <view class="corp-name">{{item.corpname}}</view>
        <view class="corp-type">
          {{item.scope}}
          <view class="s-line"  wx:if="{{item.scope}}">|</view>
          {{item.industry}}
          <view class="s-line"  wx:if="{{item.industry}}">|</view>
          {{item.city}}
        </view>
        <view class="job-count">现有职位数：<text class="count-color">{{item.jobcount}}</text></view>
    </view>
  </view>

    </block>
    <!-- <navigationload v-bind:syncLoadShow.sync="showPageLoading"></navigationload> -->
  </view>