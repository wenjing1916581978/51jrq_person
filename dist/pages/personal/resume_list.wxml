
  <view class="resumelist-container">
    <view class="blank"  wx:if="{{no_resume}}">
      <image src="/images/icons/blank_resume.png"/>
      <view>{{warnword}}</view>
    </view>
    <block  wx:else>
      <view class="alert-container" wx:if="{{showbox}}"/>
      <block wx:for="{{resumelist}}" wx:for-index="index" wx:for-item="item" wx:key="index">
        <view class="resume-list">
          <view class="content">
            <view class="up" bindtap="goLook" data-wpygolook-a="{{item.resumeid}}">
              <view class="percent">
                <view class="flex">
                  <view class="title">{{item.resumename}}</view>
                </view>
                <progress percent="{{item.percent}}" show-info activeColor="#FF9E00" border-radius="8" stroke-width="10"/>
              </view>
              <view>
                <view class="date">></view>
              </view>
            </view>
            <view class="line"/>
            <view class="down">
              <view class="delete" bindtap="deleteResume" data-wpydeleteresume-a="{{item.resumeid}}">删除简历</view>
              <view class="edit" bindtap="editResume" data-wpyeditresume-a="{{item.resumeid}}">编辑简历   <image wx:if="{{item.fileshowname}}" src="/images/icons/annex.png" class="annex_img"/></view>
            </view>
          </view>
        </view>
      </block>
      <view class="num">简历数量{{resumelist.length}}/3</view>
    </block>

    <view class="bottom-operate flex alignitems">
      <view class="add-resume flex1" bindtap="addResume" wx:if="{{no_resume || resumelist.length<3}}">添加简历</view>
      <view class="import-resume flex1" bindtap="importResume">导入简历</view>
    </view>
    <view class="alert-box" wx:if="{{showbox}}">
      <view class="sure">删除后不可恢复，是否确认删除？</view>
      <view class="yesno">
          <view class="no" bindtap="cancel">取消</view>
          <view class="yes" bindtap="yes">确定</view>
      </view>
    </view>
  </view>