
    <view class="collection-container">
        <view class="operate-container">
            <view data-num="1" class="operate-btn {{_num==1?'operate-btn-active':''}}" bindtap="menuClick">全部</view>
            <view data-num="2" class="operate-btn {{_num==2?'operate-btn-active':''}}" bindtap="menuClick">已查阅</view>
            <view data-num="3" class="operate-btn {{_num==3?'operate-btn-active':''}}" bindtap="menuClick">已储备</view>
            <view data-num="4" class="operate-btn {{_num==4?'operate-btn-active':''}}" bindtap="menuClick">面试邀约</view>
        </view>
        <view  wx:if="{{listStatus}}">
            <block wx:for="{{list}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                <view class="postitem" bindtap="getDynamic" data-wpygetdynamic-a="{{item.applyid}}" data-wpygetdynamic-b="{{index}}">
                  
  <view class="posi-corp-container" bindtap="$commposi$goDetails" data-com-index="{{index}}">
    <view class="posi-container">
        <view class="posi-name-sal">
            <text class="posi-name">{{item.jobname}}</text>
            <text class="posi-sal">{{item.salary}}</text>
        </view>
        <view class="posi-duty">
            <text>{{item.jobcity}}</text>
            <text class="ver"  wx:if="{{item.workyears}}">|</text>
            <text>{{item.workyears}}</text>
            <text class="ver"  wx:if="{{item.ebid}}">|</text>
            <text>{{item.ebid}}</text>
        </view>
    </view>
      <view class="corp-brief flex">
          <view class="logo">
              <image mode="aspectFit" src="{{item.mlogo == 'http://m.51jrq.com/null' ? 'https://www.51jrq.com/topics/images/51jrq_logo_gray.png' : item.mlogo}}"/>
          </view>
          <view class="corp-info flex1">
              <text class="corp-name ellipsis">{{item.corpname}}</text>
              <view class="corp-size-type">
                  <view class="corp-size">
                    <text>{{item.industry?item.industry:'暂无'}}</text>
                  </view>
                  <text class="up-date">{{item.refreshdate ? item.refreshdate : item.updatedate}}</text>
              </view>
          </view>
      </view>
  </view>

                </view>
                <view class="dynamicboxs"  wx:if="{{current===index}}">
                  <block wx:for="{{status}}" wx:for-index="j" wx:for-item="obj" wx:key="j">

                    <view class="flex alignitems dynamic">
                      <view class="dot {{status.length-1==j?'last':''}}"/>
                      <view class="flex1 content">
                        <view>{{obj.msg}}</view>
                        <view class="time">{{obj.data}}</view>
                      </view>
                    </view>
                  </block>
                  <navigator class="viewdetails" url="/pages/home/homeview?corpid={{item.companyid}}&jobid={{item.jobid}}">查看职位详情</navigator>
                </view>
            </block>
        </view>
        <view class="no-collect-container"  wx:else="{{listStatus}}">
            <image src="/images/icons/no_delivery.png"/>
            <view>{{warningWord}}</view>
        </view>
        <!--加载更多时动画-->
        
    <view class="loadMoreGif"  wx:if="{{$bottomloadmore$syncShow}}">
        <image src="/images/icons/loadding.gif"/>
        <text>{{$bottomloadmore$message}}</text>
    </view>

    </view>