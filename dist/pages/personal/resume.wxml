
  <view class="resume-container">
      <view class="head">
        <image mode="aspectFill" src="{{tempPortraitFilePath}}"  wx:if="{{headimgStatus}}"/>
        <image mode="aspectFill" src="/images/icons/upload_head.png"  wx:else="{{headimgStatus}}"/>
        <view>{{baseInfo.username}}</view>
      </view>
      <!-- 基本信息 -->
      <view class="info-container">
        <view class="title-container">
          <view class="title">基本信息<text hidden="{{operateShow}}"> | 必填</text></view>
          <view class="edit" bindtap="goBaseInfo" hidden="{{operateShow}}" data-wpygobaseinfo-a="{{resumeid}}">编辑</view>
        </view>
        <view class="resume-gray-line"/>
        <view class="name-container">
          <view class="name">{{baseInfo.username}}</view>
          <view hidden="{{sexStatus}}" wx:if="{{resumeid}}">
            <image src="/images/icons/male.png" wx:if="{{sex}}"/>
            <image src="/images/icons/female.png" wx:else="{{sex}}"/>
          </view>
        </view>
        <view class="small-info">{{baseInfo.livecityid}} <text wx:if="{{baseInfo.livecityid}}">|</text> {{baseInfo.workyears}}</view>
        <view class="intro-container">
          <view class="hukou"><view>户口：</view><view class="result">{{baseInfo.address}}</view></view>
          <view class="hukou"><view>婚姻状况：</view><view class="result">{{baseInfo.marital}}</view></view>
        </view>
        <view class="intro-container">
          <view>手机：</view>
          <view class="color-word">{{baseInfo.telephone}}</view>
        </view>
        <view class="intro-container">
          <view>邮箱：</view>
          <view class="color-word">{{baseInfo.email}}</view>
        </view>
        <view class="resume-gray-line"/>
        <view class="intro-container">
          <view>工作状态：</view>
          <view class="color-word">{{baseInfo.jobstatus}}</view>
        </view>
      </view>

      <view class="noid">
        <view wx:if="{{resumeid==''}}" class="noid_mask" bindtap="noidtips"/>
        <!-- 求职意向 -->
        <view class="info-container">
          <view class="title-container">
            <view class="title">求职意向<text hidden="{{operateShow}}"> | 必填</text></view>
            <view class="edit" bindtap="goJobWant" hidden="{{operateShow}}" data-wpygojobwant-a="{{resumeid}}">编辑</view>
          </view>
          <view class="resume-gray-line"/>
          <view class="intro-container">
            <view class="color-word">{{jobApply.functions}} <text wx:if="{{jobApply.functions}}">|</text> {{jobApply.postids}}</view>
          </view>
          <view class="small-info">{{jobApply.jobnature}} <text wx:if="{{jobApply.jobnature}}">/</text> {{jobApply.sitecity}} <text wx:if="{{jobApply.sitecity}}">/</text> {{jobApply.expectsalarycode}} <text wx:if="{{jobApply.expectsalarycode}}">/</text> {{jobApply.poststime}}</view>
        </view>
        <!-- 自我评价 -->
        <view class="info-container">
          <view class="title-container">
            <view class="title">自我评价<text hidden="{{operateShow}}"> | 必填</text></view>
            <view class="edit" bindtap="goJobWant" hidden="{{operateShow}}" data-wpygojobwant-a="{{resumeid}}">编辑</view>
          </view>
          <view class="resume-gray-line"/>
          <view class="intro-container">
            <view>
              {{jobApply.selfremark}}
            </view>
          </view>
        </view>
        <!-- 工作经历 -->
        <view class="info-container">
          <view class="title-container">
            <view class="title">工作经历<text hidden="{{operateShow}}"> | 必填</text></view>
          </view>
          <view class="resume-gray-line"/>
          <block wx:for="{{workExper}}" wx:for-index="index" wx:for-item="item" wx:key="index">
            <view class="job-container">
              <view class="intro-container" style="justify-content:space-between">
                <view class="time"> {{item.starttime}} - {{item.endtime}} </view>
                <view class="edit" bindtap="goWorkExper" hidden="{{operateShow}}" data-wpygoworkexper-a="{{item.workid}}" data-wpygoworkexper-b="{{resumeid}}">编辑</view>
              </view>
              <view class="yellow-title"> {{item.corpname}} </view>
              <view class="small-info">{{item.postcode}}</view>
              <view class="intro-container">
                <view>
                  {{item.workremark}}
                </view>
              </view>
              <view class="resume-gray-line"/>
            </view>
          </block>
          <view class="add-btn" hidden="{{operateShow}}">
            <image src="/images/icons/long_btn.png"/>
            <view class="btn-word" bindtap="goWorkExper" data-wpygoworkexper-a="undefined" data-wpygoworkexper-b="{{resumeid}}">+ 添加工作经历</view>
          </view>
        </view>
        <!-- 教育经历 -->
        <view class="info-container">
          <view class="title-container">
            <view class="title">教育经历<text hidden="{{operateShow}}"> | 必填</text></view>
          </view>
          <view class="resume-gray-line"/>
          <block wx:for="{{eduExper}}" wx:for-index="index" wx:for-item="item" wx:key="index">
            <view class="job-container">
              <view class="intro-container" style="justify-content:space-between">
                <view class="time"> {{item.starttime}} - {{item.endtime}} </view>
                <view class="edit" bindtap="goEduExper" hidden="{{operateShow}}" data-wpygoeduexper-a="{{item.educationid}}" data-wpygoeduexper-b="{{resumeid}}">编辑</view>
              </view>
              <view class="yellow-title"> {{item.school}} </view>
              <view class="intro-container">
                <view>{{item.specialtyid}} | {{item.educationbg}}</view>
              </view>
              <view class="resume-gray-line"/>
            </view>
          </block>
          <view class="add-btn" hidden="{{operateShow}}">
            <image src="/images/icons/long_btn.png"/>
            <view class="btn-word" bindtap="goEduExper" data-wpygoeduexper-a="undefined" data-wpygoeduexper-b="{{resumeid}}">+ 添加教育经历</view>
          </view>
        </view>
        <!-- 项目经验 -->
        <view class="info-container">
          <view class="title-container">
            <view class="title">项目经验</view>
          </view>
          <view class="resume-gray-line"/>
          <block wx:for="{{projectExper}}" wx:for-index="index" wx:for-item="item" wx:key="index">
            <view class="job-container">
              <view class="yellow-title" style="margin-top:12rpx;"> {{item.projectname}} </view>
              <view class="intro-container" style="justify-content:space-between">
                <view class="time"> {{item.starttime}} - {{item.endtime}} </view>
                <view class="edit" bindtap="goProjectExper" hidden="{{operateShow}}" data-wpygoprojectexper-a="{{item.projectid}}" data-wpygoprojectexper-b="{{resumeid}}">编辑</view>
              </view>
              <view class="intro-container">
                <view>
                  {{item.projectremark}}
                </view>
              </view>
              <view class="resume-gray-line"/>
            </view>
          </block>
          <view class="add-btn" hidden="{{operateShow}}">
            <image src="/images/icons/long_btn.png"/>
            <view class="btn-word" bindtap="goProjectExper" data-wpygoprojectexper-a="undefined" data-wpygoprojectexper-b="{{resumeid}}">+ 添加项目经验</view>
          </view>
        </view>
        <!-- 证书 -->
        <view class="info-container">
          <view class="title-container">
            <view class="title">证书</view>
          </view>
          <view class="resume-gray-line"/>
          <block wx:for="{{certificate}}" wx:for-index="index" wx:for-item="item" wx:key="index">
            <view class="job-container">
              <view class="yellow-title" style="margin-top:12rpx;"> {{item.certname}} </view>
              <view class="intro-container" style="justify-content:space-between">
                <view class="time">{{item.gaintime}} 颁发</view>
                <view class="edit" bindtap="goCert" hidden="{{operateShow}}" data-wpygocert-a="{{item.certid}}" data-wpygocert-b="{{resumeid}}">编辑</view>
              </view>
              <view class="resume-gray-line"/>
            </view>
          </block>
          <view class="add-btn" hidden="{{operateShow}}">
            <image src="/images/icons/long_btn.png"/>
            <view class="btn-word" bindtap="goCert" data-wpygocert-a="undefined" data-wpygocert-b="{{resumeid}}">+ 添加资格证书</view>
          </view>
        </view>
      </view>
      
  </view>