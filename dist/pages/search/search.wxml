
    <view>
        <view  wx:if="{{!isShowCity}}" class="search-page-container">
            
    <view class="search-container">
        <view class="search-content">
            <view  wx:if="{{$search$isShowCityName}}" bindtap="$search$trShowCityFn" class="city-cascade">
                <text>{{$search$city}}</text>
                <image class="arrow-img" src="/images/icons/arrow-down.png"/>
            </view>
            <view  wx:else="{{$search$isShowCityName}}" class="city-transparent"/>
            <view wx:if="{{$search$isShowCityName}}" class="ver"/>
            <input type="text" class="search-input" placeholder="请输入关键词，如职位名/公司名等" placeholder-class="placeholder" focus="true" confirm-type="search" maxlength="-1" bindconfirm="$search$onSearchInputFn" value="{{$search$search_input_value}}"/>
            <icon class="cancel-img" bindtap="$search$delTextFn" wx:if="{{$search$search_input_value!=''}}" type="clear" color="#888" size="14"/>
        </view>
        <text class="btn btn-cancel" bindtap="$search$goBackFn" wx:if="{{$search$search_input_value==''}}">取消</text>
        <text class="btn btn-confirm" bindtap="$search$searchFn" wx:else>完成</text>
    </view>

            <view class="search-bd">
                <view class="peo-search"  wx:if="{{!isUnderSearch}}">
                    <view class="wx-title">
                        <icon type="search" color="#a0a0a0" size="12"/>
                        <text>大家都在搜</text>
                    </view>
                    <view class="badges-container">
                        <block wx:for="{{peoSearch}}" wx:for-index="index" wx:for-item="item">
                            <text class="weui-badge" data-peo-badge="{{item}}" bindtap="selPeoBadgeFn">{{item}}</text>
                        </block>
                    </view>
                </view>
                <view class="his-search" wx:if="{{!isUnderSearch}}">
                    <view class="wx-title">
                        <icon type="waiting" color="#a0a0a0" size="12"/>
                        <text>搜索历史</text>
                        <view bindtap="empty" class="emtybtn"/>
                    </view>
                    <view class="his-container">
                        <block wx:for="{{keywordhisList}}" wx:for-index="index" wx:for-item="item" wx:key="item">
                            <view class="jrq-cell">
                                <view bindtap="selHisKeyWordFn" data-his="{{item}}" class="jrq-bd">
                                    <text>{{item}}</text>
                                </view>
                                <view class="cancel-box" bindtap="delHisCellFn" data-del="{{item}}">
                                    <image class="cancel-img" src="/images/icons/cancel.png"/>
                                </view>
                            </view>
                        </block>
                    </view>
                </view>
                <view wx:if="{{isUnderSearch}}" class="radio-search">
                     <view class="jrq-cell" bindtap="trJobListFn" wx:if="{{(!isShowJobList)&&(!isShowCorpList)}}">
                        <view class="jrq-bd">
                            <text>查找<text style="color: #FF9E00">“{{keyword}}”</text>相关职位<text class="num">({{jobNum ? jobNum : 0}}条结果)</text></text>
                        </view>
                        <image class="arrow-img" src="/images/icons/arrow_right.png"/>
                    </view>
                    <view class="jrq-cell" bindtap="trCorpListFn" wx:if="{{(!isShowCorpList)&&(!isShowJobList)}}">
                        <view class="jrq-bd">
                            <text>查找<text style="color: #FF9E00">“{{keyword}}”</text>相关企业<text class="num">({{corpNum ? corpNum : 0}}条结果)</text></text>
                        </view>
                        <image class="arrow-img" src="/images/icons/arrow_right.png"/>
                    </view>

                    <view wx:if="{{isShowJobList}}">
                        <view class="select-area">
                            <picker bindchange="bindRegionChange" value="{{index}}" range="{{areaid}}">
                                <view class="jobpicker">
                                    <text wx:if="{{areaidStatus}}">{{city}}</text>
                                    <text wx:else>{{areaid[indexRegion]}}</text>
                                    <image src="/images/icons/arrow-down.png"/>
                                </view>
                            </picker>
                            <picker bindchange="bindIndustryChange" value="{{index}}" range="{{industryid}}">
                                <view class="jobpicker">
                                    <text wx:if="{{industryidStatus}}">行业类型</text>
                                    <text wx:else>{{industryid[indexIndustry]}}</text>
                                    <image src="/images/icons/arrow-down.png"/>
                                </view>
                            </picker>
                            <picker bindchange="bindPublicChange" value="{{index}}" range="{{publicdate}}">
                                <view class="jobpicker">
                                    <text wx:if="{{publicdateStatus}}">发布时间</text>
                                    <text wx:else>{{publicdate[indexPublic]}}</text>
                                    <image src="/images/icons/arrow-down.png"/>
                                </view>
                            </picker>
                        </view>
                        <block wx:for="{{hunterjobList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                            
  <view class="posi-corp-container" bindtap="$commposi$goToHomeView" data-com-index="{{index}}" data-wpygotohomeview-a="{{item.corpid}}" data-wpygotohomeview-b="{{item.id}}">
    <view class="posi-container">
        <view class="posi-name-sal">
            <text class="posi-name">{{item.jobname}}</text>
            <text class="posi-sal">{{item.salary}}</text>
        </view>
        <view class="posi-duty">
            <text>{{item.jobcity}}</text>
            <!-- <text class="ver">|</text>
            <text>{{}}</text> -->
            <text class="ver"  wx:if="{{item.workyears}}">|</text>
            <text>{{item.workyears}}</text>
            <text class="ver"  wx:if="{{item.ebid}}">|</text>
            <text>{{item.ebid}}</text>
        </view>
    </view>
      <view class="corp-brief">
          <view class="logo">
              <image mode="aspectFit" src="{{item.mlogo == 'http://m.51jrq.com/null' ? 'https://www.51jrq.com/topics/images/51jrq_logo_gray.png' : item.mlogo}}"/>
          </view>
          <view class="corp-info">
              <text class="corp-name">{{item.corpname}}</text>
              <view class="corp-size-type">
                  <view class="corp-size">
                    <text>{{item.industry}}</text> 
                  </view>
                  <text class="up-date">{{item.refreshdate ? item.refreshdate : item.updatedate}}</text> 
              </view>
          </view>
      </view>
  </view>

                        </block>
                        <!--暂无数据显示-->
                        <view class="empty-placeholder row-center"  wx:if="{{isJobEmpty}}">
                            <image class="icon-xl" src="/images/icons/no_delivery.png"/>
                            <view class="txt">暂无发现数据</view>
                        </view>
                    </view>
                    <view wx:if="{{isShowCorpList}}">
                        <view class="select-area">
                            <picker bindchange="bindRegionChange" value="{{index}}" range="{{areaid}}">
                                <view class="jobpicker">
                                    <text wx:if="{{areaidStatus}}">{{city}}</text>
                                    <text wx:else>{{areaid[indexRegion]}}</text>
                                    <image src="/images/icons/arrow-down.png"/>
                                </view>
                            </picker>
                            <picker bindchange="bindIndustryChange" value="{{index}}" range="{{industryid}}">
                                <view class="jobpicker">
                                    <text wx:if="{{industryidStatus}}">行业类型</text>
                                    <text wx:else>{{industryid[indexIndustry]}}</text>
                                    <image src="/images/icons/arrow-down.png"/>
                                </view>
                            </picker>
                            <picker bindchange="bindNatureChange" value="{{index}}" range="{{nature}}">
                                <view class="jobpicker">
                                    <text wx:if="{{natureStatus}}">企业性质</text>
                                    <text wx:else>{{nature[indexNature]}}</text>
                                    <image src="/images/icons/arrow-down.png"/>
                                </view>
                            </picker>
                        </view>
                        <block wx:for="{{corplist}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                            
  <view class="corp-container" bindtap="$corplist$goCorpView" data-com-index="{{index}}" data-wpygocorpview-a="{{item.id}}">
    <image src="{{item.mlogo}}" mode="aspectFit"/>
    <view class="corp-intro">
        <view class="corp-name">{{item.corpname}}</view>
        <view class="corp-type">
          {{item.scope}}
          <view class="s-line"  wx:if="{{item.scope}}">|</view>
          {{item.industry}}
          <view class="s-line"  wx:if="{{item.industry}}">|</view>
          {{item.city}}
        </view>
        <view class="job-count">现有职位数：<text class="count-color">{{item.jobcount}}</text></view>
    </view>
  </view>

                        </block>
                        <!--暂无数据显示-->
                        <view class="empty-placeholder row-center"  wx:if="{{isCorpEmpty}}">
                            <image class="icon-xl" src="/images/icons/no_delivery.png"/>
                            <view class="txt">暂无发现数据</view>
                        </view>
                    </view>
                    <!--加载更多时动画-->
                    
    <view class="loadMoreGif"  wx:if="{{$bottomloadmore$syncShow}}">
        <image src="/images/icons/loadding.gif"/>
        <text>{{$bottomloadmore$message}}</text>
    </view>


                </view>
            </view>
        </view>
        
    <block  wx:if="{{isShowCity}}" wx:for="{{$citylist$regions}}" wx:for-index="index" wx:for-item="item">
        <view class="cities-header">{{item.nameStr}}</view>
        <view class="cities-list">
            <view wx:for="{{item.cityList}}" wx:for-index="idx" wx:for-item="cityName" class="activeable cities-item {{$citylist$citySelected == cityName ? 'cities-item-selected' : ''}}" data-city-name="{{cityName}}" bindtap="$citylist$selectCityFn">{{cityName}}</view>
        </view>
    </block>


    </view>